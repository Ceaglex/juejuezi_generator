<view class='title' style='text-align: center'>
  <text>🖤🖤 绝绝子生成 🌸🌸</text>
</view>
<view class="userinput">
  <view class='input'>
    <view class="weui-cells__title"> 输入你的代称</view>
    <view class="weui-cell weui-cell_input">
      <input class="weui-input" auto-focus placeholder="如：普信男、普信女、迪士尼在逃公主、小狗勾" bindinput="name" />
    </view>

    <view class="weui-cells__title"> 输入一个动词</view>
    <view class="weui-cell weui-cell_input">
      <input class="weui-input" auto-focus placeholder="如：吃饭——吃，逛街——逛，喝奶茶——喝" bindinput="verb" />
    </view>

    <view class="weui-cells__title"> 输入一个名词</view>
    <view class="weui-cell weui-cell_input">
      <input class="weui-input" auto-focus placeholder="如：吃饭——饭，逛街——街，喝奶茶——奶茶" bindinput="noun" />
    </view>
  </view>
</view>
<button class='button' bindtap='generate' type="primary">生成！</button>
<view class="output">{{jjz}}</view>